{
  "version": 2,
  "builds": [
    {
      "src": "src/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["**/*"],
        "installCommand": "npm install && npm install pg pg-hstore"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/server.js",
      "headers": {
        "Access-Control-Allow-Origin": "https://devburger-interface-five.vercel.app",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization",
        "Access-Control-Allow-Credentials": "true"
      }
    }
  ],
  "crons": [
    {
      "path": "/healthcheck",
      "schedule": "0 10 * * *"
    }
  ]
}